! Colorscheme

! special
URxvt.foreground:   #94a7ab
URxvt.background:   #171f1f
URxvt.cursorColor:  #94a7ab

! black
URxvt.color0:       #022f38
URxvt.color8:       #01837c

! red
URxvt.color1:       #f61c25
URxvt.color9:       #f81c25

! green
URxvt.color2:       #f15f35
URxvt.color10:      #f15f35

! yellow
URxvt.color3:       #fec415
URxvt.color11:      #fec415

! blue
URxvt.color4:       #3b9fe1
URxvt.color12:      #3b9fe1

! magenta
URxvt.color5:       #58538b
URxvt.color13:      #58538b

! cyan
URxvt.color6:       #2aa198
URxvt.color14:      #2aa198

! white
URxvt.color7:       #94a7ab
URxvt.color15:      #f7f6e2


! Set default font
URxvt*font:           xft:Liberation Mono:size=13

! Bind C--, C-0(=) and C-+ to activate small, medium, and big font size.
! Source: https://wiki.gentoo.org/wiki/Rxvt-unicode 
URxvt.keysym.C-minus: 	command:\033]710;xft:Liberation Mono:size=10\007
URxvt.keysym.C-0:	command:\033]710;xft:Liberation Mono:size=12\007
URxvt.keysym.C-plus:	command:\033]710;xft:Liberation Mono:size=14\007

! Customize Scrollbar
URxvt.scrollBar: true
URxvt.scrollBar_right: true
URxvt.scrollBar_floating: false
URxvt.scrollstyle: plain

! Specify TERM
URxvt*termName:  screen-256color

! Start as login shell (Helpful for Tmux)
URxvt*loginShell:  true

! Don't use scrollback buffer (Tmux has its own)
URxvt*scrollWithBuffer:  false
URxvt*saveLines:  0

! Scroll to bottom when non-special keys are pressed
URxvt*scrollTtyKeypress:  true

! Do not automatically scroll to bottom when receiving more output
URxvt*scrollTtyOutput:  false

! Fade when focus is lost
URxvt*fading:  30

! Disable Perl extension scripts
URxvt*perl-ext:
URxvt*perl-ext-common:

