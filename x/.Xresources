! COLORSCHEME

*cursorColor: #ffffff
*background: #0d0908
*foreground: #ebeeff

*color0:  #000000
*color1:  #aa4a36
*color2:  #477c5b
*color3:  #938451
*color4:  #034569
*color5:  #363a56
*color6:  #3c4855
*color7:  #51483e

*color8:  #858d88
*color9:  #e88324
*color10: #abe4c1
*color11: #cbbb8c
*color12: #5ca0c8
*color13: #8c92b7
*color14: #728ca3
*color15: #ffffff

! FONTS

! Improve font rendering
! From FadeMind and Aaditya, 2013-14, https://wiki.manjaro.org/index.php?title=Improve_Font_Rendering
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! Add keymaps for changing font
URxvt.keysym.C-1:   command:\033]710;xft:Liberation Mono:size=12\007
URxvt.keysym.C-2:   command:\033]710;xft:DejaVu Sans Mono:style=Book:size=12\007
URxvt.keysym.C-3:   command:\033]710;xft:NotoMono-Regular:size=12\007
URxvt.keysym.C-4:   command:\033]710;xft:Free Mono:style=Regular:size=12\007
URxvt.keysym.C-5:   command:\033]710;xft:Oxygen Mono:style=Regular:size=12\007
URxvt.keysym.C-6:   command:\033]710;xft:Everson Mono:style=Regular:size=12\007
URxvt.keysym.C-7:   command:\033]710;xft:InconsolataForPowerline Nerd Font:size=12\007
URxvt.keysym.C-8:   command:\033]710;xft:SauceCodePro Nerd Font:size=12\007
URxvt.keysym.C-9:   command:\033]710;xft:SourceCodePro:size=12\007
URxvt.keysym.C-0:   command:\033]710;xft:Hack:size=12\007

! Set default font
URxvt*font:         xft:Hack:size=12

! Bind C-- and C-+ to activate small, medium, and big font size.
! Source: https://wiki.gentoo.org/wiki/Rxvt-unicode 
URxvt.keysym.C-minus:   command:\033]710;xft:Hack:size=10\007
URxvt.keysym.C-plus:    command:\033]710;xft:Hack:size=14\007


! Customize Scrollbar
URxvt.scrollBar: true
URxvt.scrollBar_right: true
URxvt.scrollBar_floating: false
URxvt.scrollstyle: plain

! Specify TERM
URxvt*termName:  screen-256color

! Start as login shell (Helpful for Tmux)
URxvt*loginShell:  true

! Do not use scrollback buffer (Tmux has its own)
URxvt*scrollWithBuffer:  false
URxvt*saveLines:  0

! Scroll to bottom when non-special keys are pressed
URxvt*scrollTtyKeypress:  true

! Do not automatically scroll to bottom when receiving more output
URxvt*scrollTtyOutput:  false

! Fade when focus is lost
URxvt*fading:  30

! Disable Perl extension scripts
URxvt*perl-ext:
URxvt*perl-ext-common:

